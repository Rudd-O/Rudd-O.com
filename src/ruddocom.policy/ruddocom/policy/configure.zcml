<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:cmf="http://namespaces.zope.org/cmf"
    i18n_domain="ruddocom.policy">

  <includeDependencies package="."/>

  <include package="plone.app.registry" />
  <include package="plone.app.multilingual" />

  <genericsetup:importStep
      name="ruddocom.policy_default"
      title="Rudd-O.com site policy default"
      description=""
      handler=".setupHandlers.setupAll">
          <depends name="typeinfo" />
          <depends name="registry" />
          <depends name="plone.app.registry_default" />
          <depends name="plone.app.multilingual_default" />
          <depends name="content" />
          <depends name="componentregistry" />
  </genericsetup:importStep>

  <genericsetup:registerProfile
      name="default"
      title="Rudd-O.com site policy"
      directory="profiles/default"
      description="Turn a site into Rudd-O.com"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      />

</configure>
